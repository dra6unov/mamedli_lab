
@{
    ViewBag.Title = "Register";
}
@*<script src="~/component/js/reg.js" type="text/javascript"></script>*@

<h2>Регистрация</h2>


<form>
    <div class="form-group">
        <label for="firstname">Имя</label>
        <input type="text" id="firstname"  class="form-control"/>
    </div>
    <div class="form-group">
        <label for="lastname">Фамилия</label>
        <input type="text" id="lastname" class="form-control"/>
    </div>
    @*<div class="form-group">
        <label for="login">Введите логин</label>
        <input type="text" id="login"/>
    </div>*@
    <div class="form-group">
        <label for="email">Введите электронную почту</label>
        <input type="email" id="email" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="pass">Введите пароль</label>
        <input type="password" id="pass" class="form-control"/>
    </div>
    <button type="submit" id="btnSubmit" class="btn btn-primary">Подтвердить регистрацию</button>
    @*<input type="button" id="bt" value="efgherwtgh"/>*@
</form>

<script type="text/javascript">
    $("#btnSubmit").click(function (e) {
        e.preventDefault();
        $.ajax({
            method: "POST",
            url: "/Register/Register",
            data: {
                firstName: $("#firstname").val(),
                lastName: $("#lastname").val(),
                email: $("#email").val(),
                pass: $("#pass").val()
            }
        });

    });
</script>