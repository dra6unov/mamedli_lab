
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container body-content">
    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Наименование</th>
                    <th scope="col">Количество</th>
                    <th scope="col">Стоимость</th>
                    <th scope="col">Действие</th>
                </tr>
            </thead>

            <tbody>

                
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row" id="name">@item.PRODUCTS.PRODUCTNAME</th>
                    <td>@item.KOL</td>
                    @{
                        string price = (string)item.PRODUCTS.PRICE;
                        int _price = price.AsInt();
                        var stoim = _price * item.KOL;
                    }
                    <td>@stoim</td>
                    <td><input type="button" value="Удалить" class="btn-outline-danger"/></td>
                </tr>
                 }
                
            </tbody>
        </table>
                        }
                        else
                        {
                            <h3>Корзина пуста!</h3>
                        }
    <input type="button" value="Купить" class="btn-success"/>
</div>